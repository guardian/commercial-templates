{
	"name": "@guardian/commercial-templates-builder",
	"version": "0.0.1",
	"license": "Apache-2.0",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky && svelte-kit sync",
		"dev": "vite dev --port 7777",
		"build": "vite build && touch build/.nojekyll",
		"publish": "pnpm gh-pages --dist build --dotfiles",
		"deploy": "pnpm build && pnpm publish",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "pnpm eslint:check && pnpm prettier:check",
		"format": "pnpm eslint:fix && pnpm prettier:fix",
		"eslint:check": "eslint .",
		"eslint:fix": "eslint . --fix",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write ."
	},
	"devDependencies": {
		"@guardian/eslint-config": "^11.0.0",
		"@guardian/prettier": "^8.0.1",
		"@guardian/source": "^3.0.0",
		"@playwright/test": "^1.45.0",
		"@rollup/plugin-alias": "^3.1.8",
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^8.3.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.37.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.1",
		"@types/rollup-plugin-css-only": "^3.1.3",
		"eslint": "^9.27.0",
		"eslint-plugin-svelte": "^3.8.2",
		"gh-pages": "^6.1.1",
		"globals": "^16.1.0",
		"husky": "^9.1.7",
		"isomorphic-git": "^1.33.0",
		"marked": "^11.1.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"rollup": "^4.22.5",
		"rollup-plugin-css-only": "^4.5.2",
		"rollup-plugin-svelte": "^7.1.6",
		"rollup-plugin-terser": "^7.0.2",
		"sass": "^1.69.7",
		"svelte": "^4.2.19",
		"svelte-check": "^3.6.0",
		"svelte-preprocess": "^6.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.4.19"
	},
	"type": "module",
	"packageManager": "pnpm@10.14.0",
	"pnpm": {
		"overrides": {
			"rollup@<2.79.2": ">=2.79.2"
		}
	}
}
